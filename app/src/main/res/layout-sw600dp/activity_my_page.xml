<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFEA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/app_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_main"
                    style="@style/DetailLabelStyle"
                    android:text="000님 환영합니다"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/DetailContentStyle"
                    android:text="지금까지의 독서량을 확인해보세요"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/intent_my_setting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/setting_v3"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom_menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="독서 현황을 정리했어요"
                        style="@style/DetailLabelStyle"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="32dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#EAE4DB"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <TextView android:id="@+id/tv_card_label" style="@style/DetailLabelStyle" android:text="완독서" />
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/iv_book_cover"
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
                                    android:layout_marginVertical="8dp"
                                    android:scaleType="centerCrop"
                                    android:background="#FFFFFF" />
                                <TextView android:id="@+id/tv_card_info" style="@style/DetailLabelStyle" android:text="0권" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#EAE4DB"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView android:id="@+id/tv_card_label2" style="@style/DetailLabelStyle" android:text="독서 중" />
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/iv_book_cover2"
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_marginVertical="8dp"
                                    android:scaleType="centerCrop"
                                    android:background="#FFFFFF"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent" />
                                <TextView android:id="@+id/tv_card_info2" style="@style/DetailLabelStyle" android:text="0권" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#EAE4DB"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <TextView android:id="@+id/tv_card_label3" style="@style/DetailLabelStyle" android:text="보관 중" />
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/iv_book_cover3"
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
                                    android:layout_marginVertical="8dp"
                                    android:scaleType="centerCrop"
                                    android:background="#FFFFFF" />
                                <TextView android:id="@+id/tv_card_info3" style="@style/DetailLabelStyle" android:text="0권" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="올해 독서량을 체감해보세요"
                    style="@style/DetailLabelStyle" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:id="@+id/layout_calendar_header"
                        android:layout_width="650dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        app:layout_constraintWidth_max="650dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageButton android:id="@+id/btn_prev" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_left_v2" android:backgroundTint="#F3EFEA" />
                        <TextView android:id="@+id/tv_month_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="60dp" android:text="2026.12.12" />
                        <ImageButton android:id="@+id/btn_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_v2" android:backgroundTint="#F3EFEA"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_calendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layout_constraintEnd_toEndOf="@+id/layout_calendar_header"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_calendar_header"
                        app:layout_constraintWidth_max="650dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="이번 달 우수 회원이에요"
                    style="@style/DetailLabelStyle" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/memberContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp" />
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F3EFEA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton android:id="@+id/btn_menu_search" style="@style/BottomMenuButton" android:src="@drawable/search" android:background="@drawable/bg_under_btn_bar" />
            <ImageButton android:id="@+id/btn_menu_record" style="@style/BottomMenuButton" android:src="@drawable/book_open" android:background="@drawable/bg_under_btn_bar" />
            <ImageButton android:id="@+id/btn_menu_home" style="@style/BottomMenuButton" android:src="@drawable/house" android:background="@drawable/bg_under_btn_bar" />
            <ImageButton android:id="@+id/btn_menu_library" style="@style/BottomMenuButton" android:src="@drawable/book" android:background="@drawable/bg_under_btn_bar" />
            <ImageButton android:id="@+id/btn_menu_mypage" style="@style/BottomMenuButton" android:src="@drawable/user" android:background="@drawable/bg_under_btn_bar" android:backgroundTint="#CBBBA0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:indeterminateTint="#CBBBA0"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>