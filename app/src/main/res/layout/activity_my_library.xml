<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFEA"
    android:fitsSystemWindows="true">

    <!-- ================= 상단 Bar ================= -->
    <TextView
        android:id="@+id/tv_my_library_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Library"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/noto_serif_kr_regular"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ================= 상태 선택 탭 ================= -->
    <LinearLayout
        android:id="@+id/library_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_library_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="전체"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginStart="32dp"
            android:textColor="#000000"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_tab_selected"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/noto_serif_kr_regular" />

        <TextView
            android:id="@+id/tab_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="완독"
            android:gravity="center"
            android:background="@drawable/bg_tab_selected"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#F3EFEA"
            android:textSize="13sp"
            android:textColor="#000000"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/noto_serif_kr_regular" />

        <TextView
            android:id="@+id/tab_reading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_tab_selected"
            android:backgroundTint="#F3EFEA"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/noto_serif_kr_regular"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:radius="16dp"
            android:text="독서중"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tab_saved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="보관중"
            android:gravity="center"
            android:background="@drawable/bg_tab_selected"
            android:backgroundTint="#F3EFEA"
            android:clickable="true"
            android:focusable="true"
            android:radius="16dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/noto_serif_kr_regular" />
    </LinearLayout>

    <!-- ================= 책 리스트 ================= -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_library"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/library_tab_layout"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/empty_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 등록한 책이 존재하지 않습니다."
        android:visibility="visible"
        style="@style/DetailContentStyle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/library_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- =======================
         하단 메뉴 영역
    ======================== -->
    <LinearLayout
        android:id="@+id/layout_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F3EFEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_menu_search"
            style="@style/BottomMenuButton"
            android:src="@drawable/search"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_record"
            style="@style/BottomMenuButton"
            android:src="@drawable/book_open"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_home"
            style="@style/BottomMenuButton"
            android:src="@drawable/house"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_library"
            style="@style/BottomMenuButton"
            android:src="@drawable/book"
            android:background="@drawable/bg_under_btn_bar"
            android:backgroundTint="#E9E1D6"/>

        <ImageButton
            android:id="@+id/btn_menu_mypage"
            style="@style/BottomMenuButton"
            android:src="@drawable/user"
            android:background="@drawable/bg_under_btn_bar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
