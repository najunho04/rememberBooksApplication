<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_radius_20"
    android:padding="20dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_serif_kr_bold"
        android:includeFontPadding="false"
        android:text="DAY 1"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_serif_kr_bold"

        android:text="삭제"
        android:textColor="#8C8C8C"
        android:textSize="13sp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_day"
        app:layout_constraintEnd_toStartOf="@id/tv_item_edit"
        app:layout_constraintTop_toTopOf="@id/tv_item_day" />

    <TextView
        android:id="@+id/tv_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_serif_kr_bold"
        android:text="수정"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_day" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_day">

        <TextView
            android:id="@+id/tv_item_summary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_serif_kr_regular"
            android:includeFontPadding="false"
            android:text="2025.12.19"
            android:textColor="#8C8C8C"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_item_summary_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_serif_kr_regular"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="마음에 드는 문구가 이곳에 요약되어 표시됩니다..."
            android:includeFontPadding="false"
            android:textColor="#444444"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>