<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp">

    <TextView
        android:id="@+id/tv_read_books_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_serif_kr_bold"
        android:text="읽은 책"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_read_books_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_read_books_title" />

    <TextView
        android:id="@+id/empty_book"
        style="@style/DetailContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 등록한 책이 존재하지 않습니다."
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/rv_read_books_content"
        app:layout_constraintStart_toStartOf="@id/rv_read_books_content"
        app:layout_constraintTop_toTopOf="@id/rv_read_books_content" />

</androidx.constraintlayout.widget.ConstraintLayout>