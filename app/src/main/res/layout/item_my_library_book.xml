<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- ===== 책 커버 (2:3 비율) ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/book_cover_card_view"
        android:layout_width="76dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="book cover"
            android:src="@drawable/demian_book"
            app:layout_constraintDimensionRatio="2:3" />


    </androidx.cardview.widget.CardView>

    <!-- ===== 메타데이터 컨테이너 ===== -->
    <LinearLayout
        android:id="@+id/layout_meta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/book_cover_card_view"
        app:layout_constraintStart_toEndOf="@id/book_cover_card_view"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="데미안"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:fontFamily="@font/noto_serif_kr_semi_bold" />

        <!-- 저자 -->
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="헤르만 헤세"
            android:fontFamily="@font/noto_serif_kr_regular"
            android:textSize="10sp"
            android:textColor="#6F6F6F"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 점수 or 날짜 -->
        <TextView
            android:id="@+id/tv_meta_primary"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:fontFamily="@font/noto_serif_kr_semi_bold"
            android:text="93/100"
            android:textColor="#000000"
            android:textSize="11sp" />

        <!-- 한줄평 or 남은 독서량 -->
        <TextView
            android:id="@+id/tv_meta_secondary"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="알을 깨고 나온 사람들을 위한 책"
            android:fontFamily="@font/noto_serif_kr_semi_bold"
            android:textSize="11sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- 독서 상태 -->
        <TextView
            android:id="@+id/tv_read_state"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:fontFamily="@font/noto_serif_kr_semi_bold"
            android:text="독서 완료"
            android:textSize="11sp"
            android:textColor="#6F6F6F"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
