<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp">

    <TextView
        android:id="@+id/tv_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 선정한 탑5"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/noto_serif_kr_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top5_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_section_title"/>

    <TextView
        android:id="@+id/empty_book"
        style="@style/DetailContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 등록한 책이 존재하지 않습니다."
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/rv_top5_content"
        app:layout_constraintStart_toStartOf="@id/rv_top5_content"
        app:layout_constraintTop_toTopOf="@id/rv_top5_content" />

</androidx.constraintlayout.widget.ConstraintLayout>