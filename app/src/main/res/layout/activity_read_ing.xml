<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFE6">

    <!-- ðŸ”¹ ìŠ¤í¬ë¡¤ ì˜ì—­ -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_item_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ===== ì±… ì»¤ë²„ (2:3 ë¹„ìœ¨) ===== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/book_cover_card_view"
                android:layout_width="80dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2:3"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <ImageView
                    android:id="@+id/iv_book_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/default_book_cover_v4"
                    android:contentDescription="myBook cover"
                    app:layout_constraintDimensionRatio="2:3" />


            </androidx.cardview.widget.CardView>

            <!-- ðŸ“˜ ì œëª© -->
            <TextView
                android:id="@+id/book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000000"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_serif_kr_semi_bold"
                app:layout_constraintTop_toTopOf="@id/book_cover_card_view"
                app:layout_constraintStart_toEndOf="@id/book_cover_card_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"/>

            <!-- ðŸ“˜ ì €ìž -->
            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ì•„ì§ ë“±ë¡ëœ ì±…ì´ ì—†ìŠµë‹ˆë‹¤."
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_serif_kr_regular"
                android:textSize="10sp"
                android:textColor="#6F6F6F"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/book_title"
                app:layout_constraintStart_toStartOf="@id/book_title"/>

            <!-- ðŸ“˜ ë…ì„œ ë‚ ì§œ / ì ìˆ˜ -->
            <TextView
                android:id="@+id/book_date_of_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_serif_kr_semi_bold"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/book_author"
                app:layout_constraintStart_toStartOf="@id/book_author"/>

            <!-- ðŸ“˜ ë‚¨ì€ ë…ì„œëŸ‰ -->
            <TextView
                android:id="@+id/book_remaining_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_serif_kr_semi_bold"
                android:textSize="12sp"
                android:textColor="#000000"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/book_date_of_read"
                app:layout_constraintStart_toStartOf="@id/book_author"/>

            <TextView
                android:id="@+id/book_remaining_page2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#000000"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_serif_kr_semi_bold"
                app:layout_constraintStart_toStartOf="@id/book_author"
                app:layout_constraintTop_toBottomOf="@id/book_remaining_page"
                />

            <!-- ðŸ”¹ ë‚¨ì€ ë…ì„œëŸ‰ Progress -->
            <TextView
                android:id="@+id/remainLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ì½ì€ ë…ì„œëŸ‰"
                android:textColor="#000000"
                android:fontFamily="@font/noto_serif_kr_bold"
                app:layout_constraintTop_toBottomOf="@id/book_cover_card_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/text_remaining_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/readProgressBar"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="4dp"/>

            <ProgressBar
                android:id="@+id/readProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:padding="12dp"

                android:background="@drawable/bg_radius_20"
                android:backgroundTint="#E9E1D6"

                android:progress="0"
                android:progressTint="#CBBBA0"
                android:progressBackgroundTint="#E9E1D6"
                app:layout_constraintTop_toBottomOf="@id/remainLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- ðŸ”¹ í•œì¤„í‰ ìž…ë ¥ -->
            <TextView
                android:id="@+id/oneLineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="í•œì¤„í‰"
                android:textColor="#000000"
                android:fontFamily="@font/noto_serif_kr_bold"
                app:layout_constraintTop_toBottomOf="@id/readProgressBar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/oneLineEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="ì±…ì— ëŒ€í•œ ìƒê°ì„ í•œ ì¤„ë¡œ ë‚¨ê²¨ë³´ì„¸ìš”"
                android:background="@drawable/bg_radius_20"
                android:backgroundTint="#E9E1D6"
                android:textSize="12sp"
                android:minHeight="48dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/oneLineLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/scoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ì ìˆ˜ë¥¼ ë§¤ê²¨ì£¼ì„¸ìš”"
                android:textColor="#000000"
                android:fontFamily="@font/noto_serif_kr_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oneLineEdit"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/editScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_radius_20"
                android:backgroundTint="#E9E1D6"
                android:gravity="start"
                android:hint="00 / 100"
                android:padding="12dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scoreLabel" />

            <com.google.android.material.slider.Slider
                android:id="@+id/scoreSlider"
                style="@style/Widget.MaterialComponents.Slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:theme="@style/CustomSliderTheme"
                android:value="80.0"
                android:valueFrom="0.0"
                android:valueTo="100.0"
                app:haloRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editScore"
                app:thumbRadius="8dp"
                app:tickVisible="false"
                android:visibility="gone"/>

            <!-- ================= ì±… ë¦¬ìŠ¤íŠ¸ ================= -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scoreSlider"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <Button
        android:id="@+id/add_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ë‚˜ë§Œì˜ ê¸°ë¡ ìž‘ì„±í•˜ê¸°"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_radius_20"
        android:backgroundTint="#E9E1D6"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_menu" />

    <TextView
        android:id="@+id/save_btn"
        style="@style/DetailLabelStyle"
        android:text="ì €ìž¥í•˜ê¸°"
        android:src="@drawable/bg_tab_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"/>
    <!-- =======================
          í•˜ë‹¨ ë©”ë‰´ ì˜ì—­
     ======================== -->
    <LinearLayout
        android:id="@+id/layout_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F5EFE6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_menu_search"
            style="@style/BottomMenuButton"
            android:src="@drawable/search"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_record"
            style="@style/BottomMenuButton"
            android:src="@drawable/book_open"
            android:background="@drawable/bg_under_btn_bar"
            android:backgroundTint="#E9E1D6" />

        <ImageButton
            android:id="@+id/btn_menu_home"
            style="@style/BottomMenuButton"
            android:src="@drawable/house"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_library"
            style="@style/BottomMenuButton"
            android:src="@drawable/book"
            android:background="@drawable/bg_under_btn_bar" />

        <ImageButton
            android:id="@+id/btn_menu_mypage"
            style="@style/BottomMenuButton"
            android:src="@drawable/user"
            android:background="@drawable/bg_under_btn_bar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
