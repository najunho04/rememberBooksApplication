<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F3EFEA">

    <!-- ===== 책 커버 (2:3 비율 고정) ===== -->
    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/demian_book"
        android:background="@drawable/bg_radius_20"
        android:contentDescription="book cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="2:3" />

    <!-- ===== 제목 ===== -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="데미안"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000000"
        android:fontFamily="@font/noto_serif_kr_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_book_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== 저자 ===== -->
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="헤르만 헤세"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#6F6F6F"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== 점수 ===== -->
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="score : 98/100"
        android:textSize="11sp"
        android:textColor="#000000"
        android:fontFamily="@font/noto_serif_kr_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== 한줄평 ===== -->
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="알을 깨고 나오는 사람들의 이야기"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#000000"
        android:fontFamily="@font/noto_serif_kr_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
